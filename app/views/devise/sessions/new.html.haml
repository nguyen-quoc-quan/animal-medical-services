.row.login-container.column-seperation
  .col-md-6.col-md-offset-3
    %br/
    %div= render_error(flash[:error]) if flash[:error]
    %div= render_success(flash[:success]) if flash[:success]
    = form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f|
      .row
        .form-group.col-md-10
          %label.form-label Email
          .controls
            .input-with-icon.right
              %i
              = f.email_field :email, autofocus: true, class: "form-control"
      .row
        .form-group.col-md-10
          %label.form-label Password
          %span.help
          .controls
            .input-with-icon.right
              %i
              = f.password_field :password, autocomplete: "off", class: "form-control"
      .row
        .col-md-10
          %button.btn.btn-primary.btn-cons.form-control{:type => "submit"} Login