%h1 LOGIN
.middle-box.text-center.animated.fadeInDown
  %div
    %div
      %img{alt: "image", src:image_url('moto-logo.png')}
    %h3 Welcome to Motogenix Inventory
    %div= render_error(flash[:error]) if flash[:error]
    %div= render_success(flash[:success]) if flash[:success]
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.label :email
        = f.email_field :email, autofocus: true
      .form-group
        = f.label :password
        = f.password_field :password, autocomplete: "off"
      -if devise_mapping.rememberable?
        .form-group
          = f.check_box :remember_me
          = f.label :remember_me
      %button.btn.btn-primary.block.full-width.m-b{type:"submit"} Login
    / = render "devise/shared/links"
    %div
      %strong Copyright
      Motogenix Inventory &copy; 2014-2015
