= form_for(@food_category) do |f|
  - if @food_category.errors.any?
    #error_explanation
      %h2
        = pluralize(@food_category.errors.count, "error")
        prohibited this food_category from being saved:
      %ul
        - @food_category.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
