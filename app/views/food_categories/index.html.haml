%h1 Listing food_categories
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @food_categories.each do |food_category|
      %tr
        %td= food_category.name
        %td= link_to 'Show', food_category
        %td= link_to 'Edit', edit_food_category_path(food_category)
        %td= link_to 'Destroy', food_category, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Food category', new_food_category_path
