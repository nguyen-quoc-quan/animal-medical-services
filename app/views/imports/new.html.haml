.content
  .page-title
    %i.icon-custom-left
    %h3 Hóa Đơn Nhập
  .row-fluid
    .col-sm-12
      .grid.simple
        .grid-body
          #alert-message
          = form_for @import, html: {class: 'form-inline', id: 'import-form', method: 'post'} do |f|
            .col-sm-12.well
              .form-group
                %label Ngày
                = f.text_field :import_at, class: 'form-control', :required => true, readonly: true
              .form-group
                %label Đã Trả
                = f.number_field :pay, class: 'form-control', :required => true
            .modal-footer
              = link_to_add_fields "Thêm Thức Ăn", f, :import_details, true
              = link_to_add_fields "Thêm Thuốc", f, :import_details, false
              %button.btn.btn-white{"data-dismiss" => "modal", :type => "button"} Hủy
              %button#create-import.btn.btn-primary{:type => "button"} Tạo
