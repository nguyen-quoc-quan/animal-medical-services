<%=form_for @import, html: {class: 'form-inline', id: 'import-form', method: 'post'} do |f|%>
  <div class="col-md-12 well">
    <div class="form-group">
      <label>Date</label>
      <%=f.text_field :import_at, class: 'form-control', :required => true%>
    </div>
    
    <div class="form-group">
      <label>Pay</label>
      <%=f.number_field :pay, class: 'form-control', :required => true%>
    </div>
  </div>

  <div class="modal-footer">
  	<%= link_to_add_fields "Add Food", f, :import_details, true %>
    <%= link_to_add_fields "Add Medicine", f, :import_details, false %>
    <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
    <button type="button" id="create-import" class="btn btn-primary">Create</button>
  </div>
<%end%>