<h1>Listing bills</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Sale date</th>
      <th>Pay</th>
      <th>Owe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.customer_id %></td>
        <td><%= bill.sale_date %></td>
        <td><%= bill.pay %></td>
        <td><%= bill.owe %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bill', new_bill_path %>
