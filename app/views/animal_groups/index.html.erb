<h1>Listing animal_groups</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Quantity</th>
      <th>Begin date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animal_groups.each do |animal_group| %>
      <tr>
        <td><%= animal_group.customer_id %></td>
        <td><%= animal_group.quantity %></td>
        <td><%= animal_group.begin_date %></td>
        <td><%= link_to 'Show', animal_group %></td>
        <td><%= link_to 'Edit', edit_animal_group_path(animal_group) %></td>
        <td><%= link_to 'Destroy', animal_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

