%h1 Listing animal_groups
%table
  %thead
    %tr
      %th Quantity
      %th Started at
      %th Customer
      %th{:colspan => "3"}
  %tbody
    - @animal_groups.each do |animal_group|
      %tr
        %td= animal_group.quantity
        %td= animal_group.started_at
        %td= animal_group.customer_id
        %td= link_to 'Show', animal_group
        %td= link_to 'Edit', edit_animal_group_path(animal_group)
        %td= link_to 'Destroy', animal_group, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Animal group', new_animal_group_path
