= form_for(@medicine_category) do |f|
  - if @medicine_category.errors.any?
    #error_explanation
      %h2
        = pluralize(@medicine_category.errors.count, "error")
        prohibited this medicine_category from being saved:
      %ul
        - @medicine_category.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
