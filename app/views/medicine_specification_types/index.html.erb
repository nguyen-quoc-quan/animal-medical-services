<h1>Listing medicine_specification_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medicine_specification_types.each do |medicine_specification_type| %>
      <tr>
        <td><%= medicine_specification_type.name %></td>
        <td><%= link_to 'Show', medicine_specification_type %></td>
        <td><%= link_to 'Edit', edit_medicine_specification_type_path(medicine_specification_type) %></td>
        <td><%= link_to 'Destroy', medicine_specification_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

