= form_for(@medicine_specification_type) do |f|
  - if @medicine_specification_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@medicine_specification_type.errors.count, "error")
        prohibited this medicine_specification_type from being saved:
      %ul
        - @medicine_specification_type.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
