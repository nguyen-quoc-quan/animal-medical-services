= form_for(@sale) do |f|
  - if @sale.errors.any?
    #error_explanation
      %h2
        = pluralize(@sale.errors.count, "error")
        prohibited this sale from being saved:
      %ul
        - @sale.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :sale_at
    %br/
    = f.date_select :sale_at
  .field
    = f.label :pay
    %br/
    = f.text_field :pay
  .field
    = f.label :owe
    %br/
    = f.text_field :owe
  .field
    = f.label :customer_id
    %br/
    = f.number_field :customer_id
  .actions
    = f.submit
