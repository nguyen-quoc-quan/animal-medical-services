<%=form_for @sale, html: {class: 'form-inline', id: 'sale-form', method: 'post'} do |f|%>
  <div class="col-md-12 well">
    <div class="form-group">
      <label>Date</label>
      <%=f.text_field :sale_at, class: 'form-control', :required => true%>
    </div>
    <div class="form-group">
      <label>Customer</label>
      <%=f.select :customer_id, options_for_select(@customers_select),{include_blank: false}, class: 'form-control'%>
    </div>
    <div class="form-group">
      <label>Pay</label>
      <%=f.number_field :pay, class: 'form-control', :required => true%>
    </div>
  </div>

  <div class="modal-footer">
  	<%= link_to_add_fields "Add Food", f, :sale_details, true %>
    <%= link_to_add_fields "Add Medicine", f, :sale_details, false %>
    <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
    <button type="button" id="create-sale" class="btn btn-primary">Create</button>
  </div>
<%end%>