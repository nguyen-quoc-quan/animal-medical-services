= form_for(@medicine) do |f|
  - if @medicine.errors.any?
    #error_explanation
      %h2
        = pluralize(@medicine.errors.count, "error")
        prohibited this medicine from being saved:
      %ul
        - @medicine.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :quantity
    %br/
    = f.number_field :quantity
  .field
    = f.label :medicine_specifications_id
    %br/
    = f.number_field :medicine_specifications_id
  .field
    = f.label :medicine_categories_id
    %br/
    = f.number_field :medicine_categories_id
  .actions
    = f.submit
