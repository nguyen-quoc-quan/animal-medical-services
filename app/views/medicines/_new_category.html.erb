<div class="modal inmodal" id="newCategory" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content animated bounceInRight">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">New Medicine Category</h4>
      </div>
      <div class="modal-body">
        <div id="new-medicine-message"></div>
        <%=form_for @category, url: medicine_categories_path ,html: {class: 'm-t form-horizontal', id: 'category-form', method: 'post'} do |f|%>
          <div class="form-group">
            <label class="col-lg-2 control-label">Name</label>
            <div class="col-lg-10"><%=f.text_field :name, class: 'form-control', :required => true%></div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
            <button type="button" id="create-medicine-category" class="btn btn-primary">Create</button>
          </div>
        <%end%>

      </div>

    </div>
  </div>
</div>