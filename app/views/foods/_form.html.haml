= form_for(@food) do |f|
  - if @food.errors.any?
    #error_explanation
      %h2
        = pluralize(@food.errors.count, "error")
        prohibited this food from being saved:
      %ul
        - @food.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :quantity
    %br/
    = f.number_field :quantity
  .field
    = f.label :food_specifications_id
    %br/
    = f.number_field :food_specifications_id
  .field
    = f.label :food_categories_id
    %br/
    = f.number_field :food_categories_id
  .actions
    = f.submit
